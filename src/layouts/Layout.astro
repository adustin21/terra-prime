---
import Header from '../components/Header.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style lang="sass" is:global>
	@use "../styles/colors.sass" as c
	@import url('https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&display=swap')

	body
		font-family: 'Josefin Sans'
		font-style: normal
		background: c.$WhiteCyan
		color: c.$DarkJungleGreen
		margin: 0
		padding: 0
	body>*
		margin: 0 auto
		width: 1110px
		padding-bottom: 80px
		@media screen and (max-width: 1190px)
			width: 95%
	h1, h2, h3, h4
		margin: 0
	h1
		font-size: 48px
		line-height: 48px
		@media screen and (max-width: 400px)
			font-size: 40px
			line-height: 40px
	h2
		font-size: 40px
		line-height: 40px
		@media screen and (max-width: 400px)
			font-size: 32px
			line-height: 32px
	h3
		font-size: 24px
		line-height: 24px
	p
		font-size: 20px
		line-height: 22px
	button, input
		font-family: inherit
	button
		font-weight: bold

</style>
